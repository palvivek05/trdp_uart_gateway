ARCH = linux-x86_64
TARGET_VOS = posix
TARGET_OS = LINUX
BACANCY_PROJECT = TRUE
TCPREFIX = 
TCPOSTFIX = 
DOXYPATH = /usr/local/bin/

# adding path of source File 
ADD_SRC += uart_eth_trdp_gw/core/src
ADD_SRC += uart_eth_trdp_gw/ethernet_trdp/src
ADD_SRC += uart_eth_trdp_gw/uart_trdp/src

# adding path of include file 
ADD_INC += uart_eth_trdp_gw/core
ADD_INC += uart_eth_trdp_gw/ethernet_trdp
ADD_INC += uart_eth_trdp_gw/uart_trdp

BAC_PRO_INCPATH += -I uart_eth_trdp_gw/core/inc
BAC_PRO_INCPATH += -I uart_eth_trdp_gw/ethernet_trdp/inc
BAC_PRO_INCPATH += -I uart_eth_trdp_gw/uart_trdp/inc

# flag for build the example  
# EXAMPLES_BUILD = FLASE for not build the Example 
EXAMPLES_BUILD = TRUE

# the _GNU_SOURCE is needed to get the extended poll feature for the POSIX socket

CFLAGS += -Wall -m64 -fstrength-reduce -fsigned-char -pthread -fPIC -D_GNU_SOURCE -DPOSIX -DL_ENDIAN
#CFLAGS +=  -fno-builtin -Wno-format 
CFLAGS += -Wno-unknown-pragmas -Wno-unused-label -Wno-unused-function -Wno-address-of-packed-member
LDFLAGS += -lrt

INCPATH += -I/usr/include/uuid
CFLAGS +=  -DHAS_UUID
LDFLAGS += -luuid

LINT_SYSINCLUDE_DIRECTIVES = -i ./src/vos/posix -wlib 0 -DL_ENDIAN

# Additional sources for TSN support
#TSN_SUPPORT = 1
#SOA_SUPPORT = 1

# Use high-throughput optimization
#HIGH_PERF_INDEXED = 1
